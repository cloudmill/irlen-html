mixin aside 
  form.aside.form(action='/')
    -
      var ddata = [
        {
          title: 'Материал детали',
          items: ['Углеродистая сталь', 'Нержавеющая сталь', 'Чугун']
        },
        {
          title: 'Cерия фрезы',
          items: ['Оsawa alu по алюминию', 'Osawa G2 общего назначения с покрытием PV200', 'Osawa HF высокопроизводительные']
        },
        {
          title: 'Тип фрезы',
          items: ['Острая кромка', 'Фаска 45°', 'Фаска 45° + радиус']
        },
      ]
    if (attributes.mobile)
      .aside__mobile(data-filters-button='')
        .aside__mobile-text 
          |Фильтры
          span.aside__num
        .aside__mobile-icon 
          |+
    .aside__content
      if (attributes.alt)
        .aside__card
          .aside__container 
            h5.aside__title 
              |Размер резьбы
            ul.aside__list.aside__inner
              - for (i = 0; i < 2; i++)
                li.aside__item 
                  .select-wrapper 
                    .select.select--small
                      select.select__mobile(name='cat-mob' data-select-mobile='') 
                        option(value="" selected disabled)
                          |Выбрать
                        each item in data.selectValues.cat
                          option(value=item)
                            |#{item} 
                      select.select__select(data-select-placeholder='Выбрать' style='width: 100%')
                        option(value='' disabled selected)
                        each item in data.selectValues.cat
                          option(value=item)
                            |#{item} 
        .aside__card
          .aside__container 
            h5.aside__title 
              |Размер резьбы
            ul.aside__list.aside__inner
              - for (i = 0; i < 2; i++)
                li.aside__item 
                  .checkbox 
                    label.checkbox__label
                      input.checkbox__input(type="checkbox")
                      .checkbox__box 
                        +check-svg.checkbox__svg
                      .tooltip
                        .checkbox__text.tooltip__row
                          |ISO2X
                          span.tooltip__span
                            .tooltip__icon 
                              +tooltip-svg.tooltip__svg
                        .tooltip__container   
                          |#{data.tooltipText}
        .aside__card
          .aside__container 
            h5.aside__title 
              |Материал детали
            ul.aside__list.aside__inner
              each item in ['Углеродистая сталь', 'Нержавеющая сталь', 'Цветные металлы']
                li.aside__item 
                  .checkbox 
                    label.checkbox__label
                      input.checkbox__input(type="checkbox")
                      .checkbox__box 
                        +check-svg.checkbox__svg
                      .checkbox__text 
                        |#{item}
        .aside__card
          .aside__container 
            h5.aside__title 
              |Особенности
            ul.aside__list.aside__inner
              li.aside__item 
                .checkbox 
                  label.checkbox__label
                    input.checkbox__input(type="checkbox")
                    .checkbox__box 
                      +check-svg.checkbox__svg
                    .checkbox__text 
                      |Работают без СОЖ (только сквозные отверстия)
      else
        each item in ddata
          .aside__card
            .aside__container(data-accordion='') 
              h5.aside__title 
                |#{item.title}
              ul.aside__list.aside__inner
                each el in item.items
                  li.aside__item 
                    .checkbox 
                      label.checkbox__label
                        input.checkbox__input(type="checkbox")
                        .checkbox__box 
                          +check-svg.checkbox__svg
                        .checkbox__text 
                          |#{el}
              .aside__dropdown(data-accordion-dropdown='')
                - for (i = 0; i < 2; i++)
                  .aside__item 
                    .checkbox 
                      label.checkbox__label
                        input.checkbox__input(type="checkbox")
                        .checkbox__box 
                          +check-svg.checkbox__svg
                        .checkbox__text 
                          |Нержавеющая сталь
              .aside__button.aside__inner(data-button-show='' data-accordion-button='')
                .button-show
                  .button-show__text 
                    |Показать еще
                  .button-show__icon 
                    +arrow-svg.button-show__svg
        .aside__card 
          .aside__container(data-accordion='') 
            h5.aside__title 
              |Тип фрезы, радиокнопки
            ul.aside__list.aside__inner
              each el, index in ['Острая кромка', 'Фаска 45°', 'Фаска 45° + радиус']
                li.aside__item 
                  .radio 
                    label.radio__label
                      input.radio__input(type="radio" name='group1' checked=(index === 0))
                      .radio__circle
                        +circle-svg.radio__svg
                      .radio__text 
                        |#{el}
            .aside__dropdown(data-accordion-dropdown='')
              - for (i = 0; i < 2; i++)
                .aside__item 
                  .radio 
                    label.radio__label
                      input.radio__input(type="radio" name='group1')
                      .radio__circle
                        +circle-svg.radio__svg
                      .radio__text 
                        |Острая кромка
            .aside__button.aside__inner(data-button-show='' data-accordion-button='')
              .button-show
                .button-show__text 
                  |Показать еще
                .button-show__icon 
                  +arrow-svg.button-show__svg
        if (attributes.range)
          - for (x = 0; x < 2; x++)
            .aside__card(data-range-block='')
              .aside__container 
                h5.aside__title 
                  |Диаметр фрезы, мм
                .range.aside__inner
                  .range__top 
                    .range__row 
                      .range__item 
                        label.range__label
                          span.range__text 
                            |от
                          input.range__input(type="number" min='5' max='10' value='5')
                      .range__item 
                        label.range__label
                          span.range__text 
                            |до
                          input.range__input(type="number" min='5' max='10' value='10')
                  //- .range__range(data-range-min='1' data-range-max='50')
          .aside__card
            .aside__container 
              h5.aside__title 
                |Численное значение, мм
              .aside__inner
                input.form__input.form__input--sm(type="text" value='2000')
      if (attributes.clear)
        .aside__btn
          .clear-button(data-clear-button='')
            .clear-button__icon 
              +trash-svg.clear-button__svg
            .clear-button__text 
              |Очистить выбранное
