extends ../layouts/master.pug

include ../components/docs-card
include ../components/button
include ../components/counter
include ../components/category-card
include ../components/slider-buttons
include ../components/product-card
include ../components/modals


block content 
  .instruments-card
    -
      var ddata = [
        {
          title: 'Диаметр - D(h8)',
          text: '14.00мм',
        },
        {
          title: 'Допуск',
          text: '0/-0.027',
        },
        {
          title: 'Хвостовик - d',
          text: '14мм',
        },
        {
          title: 'Длина рабочей части - l',
          text: '54мм',
        },
        {
          title: 'Общая длина - L',
          text: '107мм',
        },
        {
          title: 'Покрытие',
          text: 'оксидирование',
        },
      ]
    section.instruments-card__section
      .container
        .instruments-card__section-row 
          .instruments-card__section-col
            .instruments-card__section-breadcrumbs 
              .breadcrumbs
                ul.breadcrumbs__list
                  each item in ['Главная', 'Инструменты', 'Раскатники']
                    li.breadcrumbs__item 
                      a.breadcrumbs__link(href="#") 
                        |#{item}
                  li.breadcrumbs__item 
                    .breadcrumbs__text 
                      |Раскатник r-d 371 iso2x m 4x0.7 2p
            .instruments-card__section-slider
              .swiper-container.swiper-container--visible--mobile.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-id='10' data-slider-prev='13' data-slider-next='14')
                .swiper-wrapper 
                  - for (i = 0; i < 6; i++)
                    .swiper-slide 
                      img.instruments-card__section-img(src="assets/images/instrument-slide-1.jpg", alt="")
                    .swiper-slide 
                      img.instruments-card__section-img(src="assets/images/instrument-slide-2.jpg", alt="")
                .swiper-pagination
            .instruments-card__section-buttons
              +slider-buttons.slider-buttons--small(prev = '13' next = '14')
          .instruments-card__section-col
            .instruments-card__section-info
              h1.instruments-card__section-title 
                |Сверло 118N MM14.00 D1897 HSS Osawa
              p.instruments-card__section-text 
                |Серия 118N - сверхкороткие сверла общего применения из быстрорежущей стали.
              .instruments-card__section-inner.margin-top.margin-top--md 
                .instruments-card__section-item 
                  .instruments-card__section-label 
                    |Артикул
                  .instruments-card__section-text 
                    |P118N1275
                .instruments-card__section-item 
                  .instruments-card__section-label 
                    |наличие
                  .instruments-card__section-text 
                    |10 шт.
              .instruments-card__price.instruments-card__price-inner
                .instruments-card__price-col
                  .tooltip.tooltip--start
                    .instruments-card__price-price.tooltip__row
                      |₽ 17.79
                      span.tooltip__span
                        .tooltip__icon 
                          +tooltip-svg.tooltip__svg
                    .tooltip__container   
                      |#{data.tooltipText}
                  .instruments-card__price-old 
                    |₽ 20.55
                .instruments-card__price-col
                  .discont.discont--small
                    .discont__text 
                      |Распродажа
              .instruments-card__section-panel.instruments-card__price-inner
                .loyalty-card.loyalty-card--small
                  .loyalty-card__icon
                    +warning-svg.loyalty-card__svg
                  .loyalty-card__content 
                    .loyalty-card__title 
                      |Для юридических лиц действует программа лояльности.
                    .loyalty-card__text 
                      |#[a.loyalty-card__link(href="#" data-fancy-button='1') Авторизуйтесь], чтобы узнать свой уровень цен.
            .instruments-card__bot(data-count-parent='')
              .instruments-card__bot-row 
                .instruments-card__bot-col
                  .instruments-card__bot-label 
                    |итого
                  .instruments-card__bot-num 
                    |₽ 345
                .instruments-card__bot-col
                  +counter.counter--md
                .instruments-card__bot-col
                  .button.button--xl(data-fancy-button='product1')
                    |Добавить в корзину
    section.instruments-card__block 
      .container 
        .instruments-card__block-row 
          .instruments-card__block-col
            h2.instruments-card__inner
              |Характеристики
            ul.instruments-card__block-list 
              each item in ddata
                li.instruments-card__block-item 
                  .instruments-card__block-text 
                    |#{item.title}
                  .instruments-card__block-text 
                    |#{item.text}
          .instruments-card__block-col
            .instruments-card__block-image 
              img(src="assets/images/instruments-card.jpg", alt="")
    section.section 
      .container
        h2.instruments-card__inner
          |Документация
        .grid-container
          - for (i = 0; i < 3; i++)
            +docs-card.docs-card--modal
    section.section 
      .container 
        .instruments-card__row.instruments-card__inner
          h2 
            |Аналогичные товары
          .instruments-card__buttons  
            +slider-buttons(prev='3' next='4')
        .swiper-container.swiper-container--visible.swiper-container--visible--mobile.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-id='1' data-slider-prev='3' data-slider-next='4')
          .swiper-wrapper 
            - for (i = 0; i < 12; i++)
              .swiper-slide 
                +product-card.product-card--responsive
    section.section.section--last 
      .container 
        .instruments-card__row.instruments-card__inner
          h2 
            |Сопутствующие категории товаров
          .instruments-card__buttons  
            +slider-buttons(prev='1' next='2')
        .swiper-container.swiper-container--visible.swiper-container--visible--mobile.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-id='1' data-slider-prev='1' data-slider-next='2')
          .swiper-wrapper 
            - for (i = 0; i < 3; i++)
              .swiper-slide
                +category-card(title = 'Cверлильно-фрезерные головки VDI' url = 'category-1.jpg')
              .swiper-slide
                +category-card(title = 'Резьбонарезные головки VDI' url = 'category-2.jpg')
              .swiper-slide
                +category-card(title = 'Токарные цанговые патроны' url = 'category-3.jpg')

  +product-modal