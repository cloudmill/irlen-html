extends ../layouts/master.pug

include ../components/navigation
include ../components/docs-card
include ../components/tabs


block content
  -
    var ddata = [
      {
        title: 'Токарные станки с ЧПУ',
        text: 'Общие документы',
        count: 4,
      },
      {
        title: 'Leadwell CNC machines mfg., corp.',
        text: 'Каталоги производителя',
        img: 'assets/images/docs/docs-2.jpg',
        count: 2,
      },
      {
        title: 'Force One machinery',
        text: 'Каталоги производителя',
        img: 'assets/images/docs/docs-3.jpg',
        count: 1,
      },
      {
        title: 'SFM',
        text: 'Каталоги производителя',
        count: 3,
        img: 'assets/images/docs-1.jpg'
      },
      {
        title: 'GSM',
        text: 'Каталоги производителя',
        count: 1,
        img: 'assets/images/docs/docs-4.jpg'
      },
      {
        title: 'POLY GIM',
        text: 'Каталоги производителя',
        count: 4,
        img: 'assets/images/docs/docs-5.jpg'
      },
    ]
  .docs-page 
    section.section.section--first 
      .container 
        +navigation(page='Документация')
    section.section
      .container 
        .docs-page__row 
          .docs-page__col
            +tabs(tabs = ['Оборудование', 'Инструменты'])
          .docs-page__col
            .docs-page__selects(data-select-parent='') 
              .docs-page__selects-item 
                .select-wrapper 
                  .select
                    select.select__mobile(name='cat-mob' data-select-mobile='') 
                      option(value="" selected disabled)
                        |Выберите категорию
                      each item in data.selectValues.cat
                        option(value=item)
                          |#{item} 
                    select.select__select(data-select-placeholder='Выберите категорию' style='width: 100%' data-select-control='')
                      option(value='' disabled selected)
                      each item in data.selectValues.cat
                        option(value=item)
                          |#{item} 
              .docs-page__selects-item 
                .select-wrapper 
                  .select.disabled(data-select-controlled='')
                    select.select__mobile(name='cat-mob') 
                      option(value="" selected disabled)
                        |Выберите бренд'
                      each item in data.selectValues.brand
                        option(value=item)
                          |#{item} 
                    select.select__select(data-select-placeholder='Выберите бренд' style='width: 100%')
                      option(value='' disabled selected)
                      each item in data.selectValues.brand
                        option(value=item)
                          |#{item} 
    each item in ddata
      section.section 
        .container
          .docs-page__row 
            .docs-page__col
              h2.docs-page__title 
                |#{item.title}
              .docs-page__text 
                |#{item.text}
            if (item.img)
              .docs-page__col   
                img.docs-page__image(src=item.img, alt="")
          .grid-container.margin-top.margin-top--md 
            - for (i = 0; i < item.count; i++)
              +docs-card
    section.section.section--last.margin-top
      .container 
        .button-show-wrapper 
          .button-show 
            .button-show__text 
              |Показать еще
            .button-show__icon 
              +arrow-svg.button-show__svg
